{
  "expo": {
    "name": "Tovi",
    "slug": "aiCompanionApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "tovi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "usesAppleSignIn": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kaya.tovi",
      "buildNumber": "1",
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSLocalNotificationUsageDescription": "This app uses local notifications to send you reminders.",
        "NSCameraUsageDescription": "This app needs access to your camera to scan QR codes.",
        "NSMicrophoneUsageDescription": "This app uses the microphone to record audio.",
        "supportsTablet": true,
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.kaya.tovi",
      "googleServicesFile": "./google-services.json",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-google-signin/google-signin",
      "expo-apple-authentication",
      [
        "@livekit/react-native-expo-plugin",
        "@config-plugins/react-native-webrtc"
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "cd342d41-6bdb-44f0-ad51-b10324ffd8fa"
      }
    },
    "owner": "yigtkaya"
  }
}
